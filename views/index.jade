div.container-fluid
  div.row-fluid
    div.span10
      div#pane
    div.span2
      div#control
        ul.nav
          li
            a.add.btn(data-type= 'server')= 'Add Server'
          li
            a.add.btn(data-type= 'fluentd')= 'Add Fluentd'
          li
            a.add.btn(data-type= 'source')= 'Add Source'
          li
            a.add.btn(data-type= 'match')= 'Add Match'
            
div.template.match
  div.match
    div.header
      h2.tag
      h3.type
    div.body
      div.config
    div.footer

div.template.source
  div.source
    div.header
      h3.type
    div.body
      div.config
    div.footer

div.edit.modal.hide.fade(data-type= 'match')
  div.modal-header
    h3= 'Edit Match'
  div.modal-body
    form.form-horizontal
      fieldset
        div.control-group
          label.control-label(for= 'editMatchPlugin')= 'tag'
          div.controls
            input#editMatchTag.input-xlarge(type= 'text', name= 'tag')
        div.control-group
          label.control-label(for= 'editMatchType')= 'out type'
          div.controls
            select#editMatchType.type(name= 'type')
              option= ''
        label= 'Config'
        fieldset.config
  div.modal-footer
    a.btn(data-dismiss= 'modal')= 'Close'
    a.btn.btn-primary= 'Save'

div.edit.modal.hide.fade(data-type= 'source')
  div.modal-header
    h3= 'Edit Source'
  div.modal-body
    form.form-horizontal
      fieldset
        div.control-group
          label.control-label(for= 'editSourcePlugin')= 'input type'
          div.controls
            select#editSourcePlugin(name= 'plugin')
              option= ''
  div.modal-footer
    a.btn.close(data-dismiss= 'modal')= 'Close'
    a.btn.btn-primary= 'Save'
